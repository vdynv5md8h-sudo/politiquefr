# Base de données PostgreSQL
# En local: installer PostgreSQL et créer une base "politiquefr"
DATABASE_URL="postgresql://user:password@localhost:5432/politiquefr?schema=public"

# Ou utiliser SQLite en local (changer provider dans schema.prisma):
# DATABASE_URL="file:./data/politiquefr.db"

# Serveur
PORT=3001
NODE_ENV=development

# JWT (générer avec: openssl rand -base64 32)
JWT_SECRET=votre-cle-secrete-minimum-32-caracteres-ici

# CORS
FRONTEND_URL=http://localhost:5173

# Admin initial (à supprimer après création)
ADMIN_EMAIL=admin@politiquefr.fr
ADMIN_MOT_DE_PASSE_INITIAL=

# APIs externes (optionnel, pour limites plus élevées)
DATA_GOUV_API_KEY=
